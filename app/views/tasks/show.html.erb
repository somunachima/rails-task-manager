<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<p><%= link_to "Back to list", "/tasks"  %></p>
<p><%= link_to "Edit this task", "/tasks/#{@task.id}/edit"  %></p>
<p><%= link_to "Delete", task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  %></p>
